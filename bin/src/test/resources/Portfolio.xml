<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Portfolio" data-provider-thread-count="3">
    <listeners>
        <listener class-name="com.qasecret.core.listener.TestListener"/>
        <listener class-name="com.qasecret.core.listener.MethodInterceptor"/>
        <listener class-name="com.qasecret.core.listener.AnnotationTransformer"/>
        <listener class-name="com.qasecret.core.listener.TestListener"/>
    </listeners>
    <test name="LoginTest" thread-count="1" parallel="tests">
        <classes>
            <class name="com.qasecret.tests.LoginTest"></class>
        </classes>
    </test>
    <test name="ProductPurchaseTest" thread-count="1" parallel="tests">
        <classes>
            <class name="com.qasecret.tests.ProductPurchaseTest"></class>
        </classes>
    </test>
</suite>

